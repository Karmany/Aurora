                        include ./includes/svg-icons/subjects-icon.jade
                     a
                  li#page-5-link
                     .desktop-nav-icon
                        include ./includes/svg-icons/profile-icon.jade
                     a
                  li#page-6-link
                     .desktop-nav-icon
                        include ./includes/svg-icons/profile-icon.jade
                     a
         include ./includes/nav-indicator.jade
            
         .container(ng-view)
         #title
         
      footer#footer
         include ./includes/footer.jade
   
   script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
