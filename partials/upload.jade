#uploadWrapper
   h2#upTitle Upload lecture
   .row
      .col.col--2-of-4.col--m-4-of-4.upFiX
         form#uploadForm(name='uploadFiles', action='index.html', method='get')
            #upSubject
               
                  select.btn(name='subject')
                     option(selected='', disabled='', hidden='') Subject
                     option(value='IMT1292') IMT1292
                     option(value='IMT2661') IMT2661
                     option(value='IMT1471') IMT1471
                     option(value='IMT2002') IMT2002
                     
            .btn#changeVidBtn Upload video
            .change#changeVid
               .upload
                  input(type="file" name="upload" id="file")
                  label(for="file") Choose video.. 
               p.VidCancel Cancel
               p.VidCancel Save
            
            .btn#changeTraBtn Upload transcript
            .change#changeTra
               .upload
                  input(type="file" name="upload" id="file")
                  label(for="file") Choose transcript...
               p.TraCancel Cancel
               p.TraCancel Save           
      
            .btn#changeSliBtn Upload slides
            .change#changeSli
               .upload
                  input(type="file" name="upload" id="file")
                  label(for="file") Choose slides...
               p.SliCancel Cancel
               p.SliCancel Save 
               
            input#finalUpload(type='button', value='Upload', onclick='move()')   
            #myProgress
               #myBar
                  #label 10%
      
      .col.col--2-of-4.col--m-4-of-4.upFiX
         form#uploadBreakpoints(name='uploadBreakpoints', action='index.html', method='get')
            #wrapperBreakpoints
               row
                  .col.col--2-of-2
                     input.theBreakpoints(type='text', name='breakpoint1', placeholder='1:01')
                     input.theKeywords(type='text', name='keyword1', placeholder='My Keyword 1')
                  .col.col--2-of-2
                     input.theBreakpoints(type='text', name='breakpoint2', placeholder='1:02')
                     input.theKeywords(type='text', name='keyword2', placeholder='My Keyword 2')
                  .col.col--2-of-2
                     input.theBreakpoints(type='text', name='breakpoint3', placeholder='1:03')
                     input.theKeywords(type='text', name='keyword3', placeholder='My Keyword 3')
                  .col.col--2-of-2
                     input.theBreakpoints(type='text', name='breakpoint4', placeholder='1:04')
                     input.theKeywords(type='text', name='keyword4', placeholder='My Keyword 4')
                  .col.col--2-of-2
                     input#key5time.theBreakpoints(type='text', name='breakpoint5', placeholder='1:05')
                     input#key5title.theKeywords(type='text', name='keyword5', placeholder='My Keyword 5')
                  .col.col--2-of-2
                     button(id='addButton', type='button') Add new keyword

script. 
   $(document).ready(function(){
      $("#addButton").click(function(event){
         $("#key5title").show();
         $("#key5time").show();
      });
      //VID
      $('#changeVidBtn').click(function(){
         $('#changeVid').toggle()
      });
      $('.VidCancel').click(function(){
         $('#changeVid').toggle()
      });
      $('.VidCancel').click(function(){
         $('#changeVidBtn').toggle()
      });
      $('#changeVidBtn').click(function(){
         $('#changeVidBtn').toggle()
      });
      //transcript
      $('#changeTraBtn').click(function(){
         $('#changeTra').toggle()
      });
      $('.TraCancel').click(function(){
         $('#changeTra').toggle()
      });
      $('.TraCancel').click(function(){
         $('#changeTraBtn').toggle()
      });
      $('#changeTraBtn').click(function(){
         $('#changeTraBtn').toggle()
      });
      //slides
      $('#changeSliBtn').click(function(){
         $('#changeSli').toggle()
      });
      $('.SliCancel').click(function(){
         $('#changeSli').toggle()
      });
      $('.SliCancel').click(function(){
         $('#changeSliBtn').toggle()
      });
      $('#changeSliBtn').click(function(){
         $('#changeSliBtn').toggle()
      });      
   });
   
script.
   function move() {
      document.getElementById('myProgress').style.visibility = 'visible'
      var elem = document.getElementById("myBar");
      var width = 10;
      var id = setInterval(frame, 10);
      function frame() {
         if (width >= 100) {
            clearInterval(id);
         } else {
         width++;
         elem.style.width = width + '%';
         document.getElementById("label").innerHTML = width * 1  + '%';
         }
      }
   }
